{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/typescript",
      "plugin:react/recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "/commitlint.config.js",
      "/public/comscore.js",
      "/public/polyfill.js"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "plugins": ["react", "react-hooks", "import", "@typescript-eslint", "prettier"],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/display-name": "off",
      "react/jsx-sort-props": [
        "error",
        {
          "callbacksLast": true,
          "shorthandFirst": true,
          "shorthandLast": false,
          "ignoreCase": true,
          "noSortAlphabetically": false,
          "reservedFirst": true
        }
      ],
      "no-duplicate-imports": "error",
      "no-param-reassign": "error",
      "import/newline-after-import": ["error"],
      "import/order": [
        "error",
        {
          "groups": [["external", "builtin"], "internal", ["sibling", "parent"], "index"],
          "pathGroups": [
            {
              "pattern": "{react,react-dom/client,react-dom,react-router-dom,@reduxjs/toolkit,redux-persist,redux-persist/lib/storage,react-redux,redux-persist/lib/integration/react,@uidotdev/usehooks,@noriginmedia/norigin-spatial-navigation,@tanstack/react-query,axios,styled-components,@testing-library/react,react-test-renderer}",
              "group": "builtin",
              "position": "before"
            }
          ],
          "pathGroupsExcludedImportTypes": ["internal", "react"],
          "newlines-between": "always"
        }
      ]
    },
    "settings": {
      "import/resolver": {},
      "react": {
        "version": "detect"
      }
    }
  }
  